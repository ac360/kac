<% include header %>

<div class="row">
	<div class="col-md-offset-3 col-md-6">

		    <h1>Login</h1>
		    <% if (message) { %>
				<p><%= message %></p>
			<% } %>
			<form action="/login" method="post">
				<div>
				<label>Email:</label>
				<input type="text" name="username"/><br/>
				</div>
				<div>
				<label>Password:</label>
				<input type="password" name="password"/>
				</div>
				<div>
				<input type="submit" value="Submit"/>
				</div>
			</form>

	</div> <!-- col-md-6 -->
</div> <!-- .row -->

<% include footer %>